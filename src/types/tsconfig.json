{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "outDir": "./dist",
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": ".",
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  },
  "include": ["./*", "./api/**/*", "./components/**/*"]
}
